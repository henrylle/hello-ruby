<h1>New Article</h1>
<%= form_tag articles_path, local: true do |form| %>
    <p>
        <%= label_tag :title %><br>
        <%= text_field_tag :title %>
    </p>

    <p>
        <%= label_tag :text %><br>
        <%= text_field_tag :text %>
    </p>
    <p>
        <%= submit_tag %>
    <% end %>
